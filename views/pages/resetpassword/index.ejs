<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../elements/head %>
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div
          class="content-wrapper d-flex align-items-stretch auth auth-img-bg"
        >
          <div class="row flex-grow">
            <div
              class="col-lg-6 d-flex align-items-center justify-content-center"
            >
              <div class="auth-form-transparent text-left p-3">
                <div class="brand-logo">
                  <img src="../../../../images/logo-dark.svg" alt="logo" />
                </div>
                <form action="/reset-password" method="POST" class="pt-1">
                  <div class="form-group">
                      <label id="label-pass">Mật khẩu<span>*</span></label>
                      <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                          <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                          </span>
                        </div>
                        <input name="password" type="password" class="form-control form-control-lg border-left-0"
                          id="password" placeholder="Password" required />
                        <div class="valid-feedback">
                          Vui lòng nhập mật khẩu lớn hơn hoặc 8 ký tự.
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label id="label-repass">Nhập lại mật khẩu<span>*</span></label>
                      <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                          <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                          </span>
                        </div>
                        <input type="password" class="form-control form-control-lg border-left-0" name="repassword"
                          id="repassword" placeholder="RePassword" required />
                        <div class="valid-feedback">
                          Hai mật khẩu không trùng nhau.
                        </div>
                      </div>
                    </div>
                    <div class="mt-3">
                      <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" id="btn-sign-up"
                        type="submit">
                        Xác nhận
                      </button>
                    </div>
                </form>
                <script>
                    (function () {
                      'use strict';
                      const checkPassword = () => {
                        console.log("Đang kiểm tra mật khẩu!")
                        const pass = document.getElementById("password");
                        const repass = document.getElementById("repassword");
                        if (pass === null || repass === null) return false;
                        console.log("in check pass");
                        if (pass.value.length < 8) {
                          pass.focus();
                          return false;
                        }
      
                        if (pass.value == repass.value) {
                          return true;
                        } else {
                          repass.focus();
                          return false;
                        }
                      };
                      window.addEventListener('load', function () {
                        console.log("Đang kiểm tra");
                        // Fetch all the forms we want to apply custom Bootstrap validation styles to
                        var forms = document.getElementsByClassName('needs-validation');
                        // Loop over them and prevent submission
                        var validation = Array.prototype.filter.call(forms, function (form) {
                          form.addEventListener('submit', function (event) {
                            console.log("Đang kiểm tra nè!");
                            if (checkPassword() === false) {
                              event.preventDefault();
                              event.stopPropagation();
                              console.log("Đang kiểm tra nè m!");
                            }
                            form.classList.add('was-validated');
                          }, false);
                        });
                      }, false);
                    })();
      
                  </script>
              </div>
            </div>
            <div class="col-lg-6 login-half-bg d-flex flex-row"></div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <% include ../../elements/scripts %>
  </body>
</html>
