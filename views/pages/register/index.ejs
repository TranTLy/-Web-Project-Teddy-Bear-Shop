<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
      <div class="row flex-grow">
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
          <div class="auth-form-transparent text-left p-3">
            <form action="/register" method="POST" class="pt-3">
              <div class="form-group">
                <label>Tên đăng nhập</label>
                <div class="input-group">
                  <div class="input-group-prepend bg-transparent">
                    <span class="input-group-text bg-transparent border-right-0">
                      <i class="mdi mdi-account-outline text-primary"></i>
                    </span>
                  </div>
                  <input type="text" class="form-control form-control-lg border-left-0 type-text"
                    placeholder="Tên đăng nhập" id="name" name="name"/>
                </div>
              </div>
              <div class="form-group">
                <label>Email</label>
                <div class="input-group">
                  <div class="input-group-prepend bg-transparent">
                    <span class="input-group-text bg-transparent border-right-0">
                      <i class="mdi mdi-email-outline text-primary"></i>
                    </span>
                  </div>
                  <input id="email"  name="email" type="email" class="form-control form-control-lg border-left-0 "
                    placeholder="Email" />
                </div>
              </div>
              <!-- <div class="form-group">
                <label>Giới tính</label>
                <select
                  class="form-control form-control-lg"
                  id="exampleFormControlSelect2"
                >
                  <option>Giới tính</option>
                  <option>Nam</option>
                  <option>Nữ</option>
                  <option>Khác</option>
                </select>
              </div> -->
              <div class="form-group">
                <label>Password</label>
                <div class="input-group">
                  <div class="input-group-prepend bg-transparent">
                    <span class="input-group-text bg-transparent border-right-0">
                      <i class="mdi mdi-lock-outline text-primary"></i>
                    </span>
                  </div>
                  <input  name="password" type="password" class="form-control form-control-lg border-left-0" id="password"
                    placeholder="Password" />
                </div>
              </div>
              <div class="form-group">
                <label>Nhập lại Password</label>
                <div class="input-group">
                  <div class="input-group-prepend bg-transparent">
                    <span class="input-group-text bg-transparent border-right-0">
                      <i class="mdi mdi-lock-outline text-primary"></i>
                    </span>
                  </div>
                  <input type="password" class="form-control form-control-lg border-left-0"name="repassword" id="re-password"
                    placeholder="RePassword" />
                </div>
              </div>
              <div class="mb-4">
                <div class="form-check">
                  <label class="form-check-label text-muted">
                    <input type="checkbox" class="form-check-input" />
                    Tôi đồng ý với các điều khoản.
                  </label>
                </div>
              </div>
              <div class="mt-3">
                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" id="btn-sign-up" type="submit">
                  Đăng ký
                </button>
              </div>
              <div class="text-center mt-4 font-weight-light">
                Bạn đã có tài khoản?
                <a href="login.html" class="text-primary">Đăng nhập</a>
              </div>

            </form>
          </div>
        </div>
