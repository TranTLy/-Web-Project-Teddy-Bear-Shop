<div class="wrapper">
  <div class="main-panel w-100">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8 offset-md-2">
            <div class="card">
              <div class="card-header card-header-primary">
                <h4 class="card-title font-weight-light">Thông tin chi tiết</h4>
              </div>
              <div class="card-body">
                <form>
                  <div class="row">
                    <div class="form-group ml-3">
                      <label class="bmd-label-floating">Tên đăng nhập</label>
                      <p style="font-weight:500;"><%=user.name%></p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-group ml-3">
                      <label class="bmd-label-floating">Email</label>
                      <p style="font-weight:500;"><%=user.email%></p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-group ml-3">
                      <label class="bmd-label-floating">Trạng thái</label>
                      <p style="font-weight:500;"><%=user.is_block%></p>
                    </div>
                  </div>
                  <div class="row mt-5">
                    <div class="col-md-12 d-flex justify-content-center">
                      <a href="/users">
                        <button type="button" class="btn btn-primary mr-3">
                          Sửa
                        </button>
                      </a>
                      <a href="/reset-password">
                        <button type="button" class="btn btn-primary ml-3">
                          Thay đổi mật khẩu
                        </button>
                      </a>
                    </div>
                  </div>
                  <div class="clearfix"></div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
