  <div class="main-panel w-100">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8 offset-md-2">
            <div class="card">
              <div class="card-header card-header-primary">
                <h4 class="card-title font-weight-light">Thông tin chi tiết</h4>
              </div>
              <div class="card-body">
                <form>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="bmd-label-floating">Tên đăng nhập</label>
                        <p style="font-weight:500;"><%=userDetail.name%></p>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="bmd-label-floating">Email</label>
                        <p style="font-weight:500;"><%=userDetail.email%></p>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                            <label class="bmd-label-floating">Số điện thoại</label>
                            <p style="font-weight:500;"><%=userDetail.phoneNumber%></p>
                          </div>
                        </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="bmd-label-floating">Ngày sinh</label>
                        <!-- <p><%=userDetail.birthday%></p> -->
                        <p style="font-weight:500;"><%=moment(userDetail.birthday).format('HH:mm DD/MM/YYYY') %></p>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="bmd-label-floating">Trạng thái</label>
                        <!-- <p><%=userDetail.birthday%></p> -->
                        <p style="font-weight:500;"><%=userDetail.is_block%></p>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                  </div>
                  <div class="row mt-5">
                    <div class="col-md-12 d-flex justify-content-center">
                      <a href="/users">
                        <button type="button" class="btn btn-primary">
                          Quay lại
                        </button>
                      </a>
                    </div>
                  </div>
                  <div class="clearfix"></div>
                </form>
              </div>
            </div>
          </div>
