<div class="row grid-margin">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Quản lý hệ thống gian hàng</h4>
                <div id="js-grid-products" class="pt-3 jsgrid" style="position: relative; height: 516px; width: 100%;">
                    <div class="jsgrid-grid-header jsgrid-header-scrollbar">
                        <table class="jsgrid-table">
                            <div id="dialog-form" title="Details" style="display:none">
                                <form id="categoryForm">
                                    <p>
                                        <label class="col-sm-4 p-0 m-0">Tên:</label>
                                        <input id="name" class="col-sm-8 p-0 m-0" />
                                    </p>

                                    <p>
                                        <label class="col-sm-4 p-0 m-0">ID: </label>
                                        <input id="id" class="col-sm-8 p-0 m-0" />
                                    </p>
                                    <p>
                                        <label class="col-sm-4 p-0 m-0">Giá:</label>
                                        <input id="price" class="col-sm-8 p-0 m-0" />
                                    </p>
                                    <p>
                                        <label class="col-sm-4 p-0 m-0">Chiếc khấu: </label>
                                        <select id="discount" class="col-sm-8 p-0 m-0">
                                            <option value="0"></option>
                                            <option value="1">5%</option>
                                            <option value="2">10%</option>
                                            <option value="3">20%</option>
                                            <option value="4">30%</option>
                                            <option value="5">50%</option>
                                            <option value="6">60%</option>
                                        </select>
                                    </p>
                                    <p>
                                        <label class="col-sm-4 p-0 m-0">Kích thước: </label>
                                        <select id="size" class="col-sm-8 p-0 m-0">
                                            <option value="0"></option>
                                            <option value="1">Nhỏ</option>
                                            <option value="2">Trung bình</option>
                                            <option value="3">Lớn</option>
                                            <option value="4">Rất lớn</option>
                                        </select>
                                    </p>
                                    <p><label class="col-sm-4 p-0 m-0">Màu sắc: </label>
                                        <select id="color" class="col-sm-8 p-0 m-0">
                                            <option value="0"></option>
                                            <option value="1">Xám</option>
                                            <option value="2">Xanh</option>
                                            <option value="3">Đỏ</option>
                                            <option value="4">Đen</option>
                                    </select>
                              </p>
                                    <p>
                                        <label class="col-sm-4 p-0 m-0">Loại:</label>
                                            <select id="category"  class="col-sm-8 p-0 m-0" >
                                        <option value="0"></option>
                                        <option value="1">category 1</option>
                                        <option value="2">category 2</option>
                                        <option value="3">category 3</option>
                                        <option value="4">category 4</option>
                                    </select>
                            
                            </p>
                                    <p>
                                        <label class="col-sm-4 p-0 m-0">Mô tả:</label> 
                                            <input id="describe" class="col-sm-8 p-0 m-0" />
                                        </p>
                                    <p>
                                        <label class="col-sm-4 p-0 m-0">Link hình: </label>
                                             <input id="img" class="col-sm-8 p-0 m-0"/>
                                           
                                        </p>
                                </form>
                            </div>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card justify-content-center add-padding-top-20px">
        <div class="card">
            <div class="custom-card-header card-header ">
                <div class="row">
                    <div class="col-sm-8 text-left">
                        <h2 class="card-title">Số lượng sản phẩm mỗi loại</h2>
                    </div>
                </div>
            </div>
            <div class="card-body custom-card-body">
                <div class="chartjs-size-monitor"
                    style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
                    <div class="chartjs-size-monitor-expand"
                        style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                        <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
                    </div>
                    <div class="chartjs-size-monitor-shrink"
                        style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                        <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
                    </div>
                </div>
                <canvas id="barChartTypeProduct" width="1000" height="250" class="chartjs-render-monitor"
                    style="display: block; width: 457px; height: 228px;"></canvas>
            </div>
        </div>
    </div>
</div>